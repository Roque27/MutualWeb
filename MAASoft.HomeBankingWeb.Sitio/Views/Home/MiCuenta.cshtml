@model MAASoft.HomeBankingWeb.Sitio.ViewModels.MiCuentaViewModel
@{
    ViewBag.Title = "Mi cuenta";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Partial("_Errores")
    @Html.Partial("_ResultadoOk")

<div class="form-horizontal">
    <p class="h2 col-md-12">Mi Cuenta:</p>
    <hr class="h3 col-md-12" />
    <div class="form-group">
        @Html.LabelFor(model => model.NumeroSocio, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.NumeroSocio, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NombreApellidoORazonSocial, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.NombreApellidoORazonSocial, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TipoDocumento, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.TipoDocumento, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NumeroDocumento, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.NumeroDocumento, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Domicilio, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Domicilio, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Localidad, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Localidad, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CodPostal, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.CodPostal, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Celular, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Celular, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <hr />
    <p>Para cambiar su contraseña ingrese la actual y luego una nueva.</p>
    <div class="form-group">
        @Html.LabelFor(m => m.ContraseñaActual, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ContraseñaActual, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContraseñaNueva, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ContraseñaNueva, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmarContraseñaNueva, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ConfirmarContraseñaNueva, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-4">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-danger">Cancelar</a>
        </div>
    </div>
</div>
}

@section bodyScripts {
    @Scripts.Render("~/bundles/jqueryval")
}
